                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginStart="8dp"
                        android:textAlignment="textStart"
                        android:layout_weight="1"
                        android:id="@+id/sem1_new"
                        style="@style/company_details_info"/>

                </LinearLayout>

