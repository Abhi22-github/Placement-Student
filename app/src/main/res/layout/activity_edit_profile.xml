<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentTop="true"
        android:background="#f9f9f9">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="15dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:text="Edit Profile"
            android:textAppearance="@style/PrimaryHeading"
            android:textColor="@color/black" />

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/request_button_layout"
        android:layout_below="@id/top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="@dimen/margin_end"
                android:text="Changes will be reflected in system when your branch co-ordinator will approve the request."/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/sem1_layout"
                style="@style/text_field_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Sem 1"
                android:visibility="gone"
                app:placeholderText="e.g 6.9(SGPA)"
                app:placeholderTextAppearance="@style/placeholder_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/sem1"
                    style="@style/edit_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="numberDecimal" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/sem2_layout"
                style="@style/text_field_layout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Sem 2"
                app:placeholderText="e.g 6.9(SGPA)"
                app:placeholderTextAppearance="@style/placeholder_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/sem2"
                    style="@style/edit_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="numberDecimal" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/sem3_layout"
                style="@style/text_field_layout"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Sem 3"
                app:placeholderText="e.g 6.9(SGPA)"
                app:placeholderTextAppearance="@style/placeholder_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/sem3"
                    style="@style/edit_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="numberDecimal" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/sem4_layout"
                style="@style/text_field_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:hint="Sem 4"
                app:placeholderText="e.g 6.9(SGPA)"
                app:placeholderTextAppearance="@style/placeholder_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/sem4"
                    style="@style/edit_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="numberDecimal" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/sem5_layout"
                style="@style/text_field_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:hint="Sem 5"
                app:placeholderText="e.g 6.9(SGPA)"
                app:placeholderTextAppearance="@style/placeholder_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/sem5"
                    style="@style/edit_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="numberDecimal" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/sem6_layout"
                style="@style/text_field_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Sem 6"
                android:visibility="gone"
                app:placeholderText="e.g 6.9(SGPA)"
                app:placeholderTextAppearance="@style/placeholder_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/sem6"
                    style="@style/edit_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="numberDecimal" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/sem7_layout"
                style="@style/text_field_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:hint="Sem 7"
                app:placeholderText="e.g 6.9(SGPA)"
                app:placeholderTextAppearance="@style/placeholder_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/sem7"
                    style="@style/edit_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="numberDecimal" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/sem8_layout"
                style="@style/text_field_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:hint="Sem 8"
                app:placeholderText="e.g 6.9(SGPA)"
                app:placeholderTextAppearance="@style/placeholder_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/sem8"
                    style="@style/edit_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="numberDecimal" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/aggregate_cgpa_layout"
                style="@style/text_field_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Aggregate CGPA"
                android:visibility="gone"
                app:placeholderText="e.g 6.9(CGPA)"
                app:placeholderTextAppearance="@style/placeholder_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/aggregate_cgpa"
                    style="@style/edit_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/aggregate_percentage_layout"
                style="@style/text_field_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:hint="Aggregate Percentage"
                app:placeholderText="e.g 6.9(SGPA)"
                app:placeholderTextAppearance="@style/placeholder_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/aggregate_percentage"
                    style="@style/edit_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/active_backlogs_layout"
                style="@style/text_field_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:hint="No. of Active Backlogs">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/active_backlogs"
                    style="@style/edit_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/previous_backlogs_layout"
                style="@style/text_field_layout"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="No. of Previous Backlogs">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/previous_backlogs"
                    style="@style/edit_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>




        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/request_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/margin_start"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="@dimen/margin_end"
        android:layout_marginBottom="10dp"
        android:background="@color/white">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/request_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/product_sans_regular"
            android:insetTop="1dp"
            android:insetBottom="1dp"
            android:letterSpacing="0"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:stateListAnimator="@null"
            android:text="Add Request"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:elevation="2dp" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:elevation="3dp"
            android:theme="@style/ProgressBarStyle"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>